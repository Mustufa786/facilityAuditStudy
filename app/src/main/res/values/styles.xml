<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="checkbox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawableStart">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">12dp</item>


    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#33b78ff7</item>
        <item name="sv_showcaseColor">@color/colorPrimaryDark</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="buttons" parent="android:Widget.Material.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/background_grad</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:checkboxStyle">@style/checkbox</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="spinnerStyle">@style/spinner</item>
        <item name="toolbarStyle">@style/ActionBar</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="BackgroundStyle" parent="android:Widget.Material.Light.ScrollView">
        <item name="android:background">#e4e4e4</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Form Styles -->
    <style name="labels" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <item name="android:drawable">@drawable/textview_background_grad</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">26sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="textInput" parent="android:Widget.Material.Light.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="numbox" parent="android:Widget.Material.Light.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/num</item>
        <item name="android:maxLength">3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_style</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="linerlayout_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="vlinerlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="hlinerlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linerlayout_view_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="linerlayout_view_wt_bound">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Irfan Scrollview  -->

    <style name="i_scrollview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <!-- Irfan Textview  -->
    <style name="i_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23sp</item>
    </style>

    <!-- SAJID Textview  -->
    <style name="textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">23sp</item>
    </style>

    <!-- SAJID Textview  -->
    <style name="qtextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">23sp</item>
    </style>

    <!-- Irfan Textview  -->
    <style name="i_textview_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimaryAlpha</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- Irfan RadioGroup  -->
    <style name="vradiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- RadioGroup  -->
    <style name="hradiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Irfan RadioButton  -->
    <style name="i_radiobutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>

    </style>


    <!--

    Edittext Start

    -->

    <!-- EditText Acept Characters Starts. -->
    <style name="EditText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!-- EditText Acept Number  Starts. -->
    <style name="EditText_number">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!-- EditText Acept Number Decimal  Starts. -->
    <style name="EditText_number_de">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- EditText Acept Date Black Box.-->
    <style name="EditText_number_b_box">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!--Card View Start-->
    <style name="cardView">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <!--Card View Start-->
    <style name="cardViewDark">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewCenterGravity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="textView2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#e3eaf3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textView3Head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#EC477A</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--Button View Start-->
    <style name="button">
        <item name="android:background">@drawable/curve_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">25sp</item>
    </style>
    <!--Button View End-->

</resources>




